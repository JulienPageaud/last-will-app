<h1>Users#show</h1>
<p>The user/client's main dashboard</p>

<%= render 'shared/sidebar' %>

<div class="container">
  <div id="user-details" class="details-box">

    <img src="app/assets/images/user.png" alt="user" class="avatar-large">
    <p>Edit Profile Picture</p>

    <%= simple_form_for @user, class: "flex-outer" do |f| %>
      <ul class="flex-outer">
        <li>
          <%= f.input :first_name %>
        </li>
        <li>
          <%= f.input :middle_name %>
        </li>
        <li>
          <%= f.input :last_name %>
        </li>
        <li>
          <%= f.input :citizenship %>
        </li>
        <li>
          <%= f.input :date_of_birth %>
        </li>
        <li>
          <%= f.input :phone_number %>
        </li>
        <li>
          <%= f.input :address_line_1 %>
        </li>
        <li>
          <%= f.input :address_line_2 %>
        </li>
        <li>
          <%= f.input :town %>
        </li>
        <li>
          <%= f.input :postcode %>
        </li>
        <li>
          <%= f.input :country %>
        </li>
        <li>
          <%= f.button :submit %>
        </li>
      </ul>
    <% end %>

  </div>
</div>
